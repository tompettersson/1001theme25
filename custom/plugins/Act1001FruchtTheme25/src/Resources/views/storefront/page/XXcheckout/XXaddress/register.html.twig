{% sw_extends '@Storefront/storefront/page/checkout/address/register.html.twig' %}

{% block component_account_register_header %}
    {{ parent() }}

    {% block component_account_register_subhead %}
        <div class="card-register-intro">{{ "checkout.registerWelcome"|trans|sw_sanitize }}</div>
    {% endblock %}
{% endblock %}

{% block page_checkout_register_personal_guest_input %}
    {% if feature('FEATURE_NEXT_16236') %}
        <input type="checkbox"
               class="{{ formCheckInputClass }}"
               name="createCustomerAccount"
               value="true"
               id="personalGuest"
               {% if config('core.loginRegistration.createCustomerAccountDefault') == 1 %}checked="checked"{% endif %}
               data-form-field-toggle="true"
               data-form-field-toggle-target=".js-form-field-toggle-guest-mode"
               data-form-field-toggle-value="true">
    {% else %}
        <input type="checkbox"
               class="{{ formCheckInputClass }}"
               name="guest"
               value="true"
               id="personalGuest"
               {% if data.get('guest') %}checked="checked"{% endif %}
               data-form-field-toggle="true"
               data-form-field-toggle-target=".js-form-field-toggle-guest-mode"
               data-form-field-toggle-value="false">
    {% endif %}
{% endblock %}

{% block page_checkout_register_personal_guest_label %}
    <label class="{{ formCheckLabelClass }}"
           for="personalGuest">
        {% if feature('FEATURE_NEXT_16236') %}
            {{ "checkout.registerCustomermodeLabel"|trans|sw_sanitize }}
        {% else %}
            {{ "checkout.registerGuestmodeLabel"|trans|sw_sanitize }}
        {% endif %}
    </label>
{% endblock %}
