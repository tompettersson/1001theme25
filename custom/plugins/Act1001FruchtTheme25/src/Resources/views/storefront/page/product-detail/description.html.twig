                    <p class="max-w-sm">{{ page.product.customFields.migration_1001Frucht_product_attr13|trans|sw_sanitize }}</p>
                    <img class="origin-map mappi" src="/media/maps/{{ map[property.name] }}" alt="{{ property.name }}">
